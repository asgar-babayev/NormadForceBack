@using NormadForceProject
@using NormadForceProject.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Team>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
            crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
</head>

<body>
    <header>
        <div class="hero" id="hero">
            <div class="heroText">
                <h1 class="text-white mt-5 mb-lg-4">
                    Nomad Force
                </h1>
                <p class="text-white">
                    create a great video for your <strong class="custom-underline">website</strong>
                </p>
            </div>

            <div class="videoWrapper">
                <video autoplay loop muted class="custom-video" poster="videos/792bd98f3e617786c850493560e11c45.jpg">
                    <source src="~/assets/images/video.mp4" type="video/mp4">

                    Your browser does not support the video tag.
                </video>
            </div>
            <div class="overlay"></div>
        </div>
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Nomad Force</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#hero">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#ourstudio">Our Studio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#portfolio">Portfolio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#news">News & Events</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact">Contact Us</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Team" asp-action="Index" asp-area="Manage">Admin</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Auth" asp-action="SignOut" asp-area="Manage">Log Out</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Login" asp-area="Manage">Sign in</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Auth" asp-action="Register" asp-area="Manage">Sign Up</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <section id="ourstudio">
        <div class="container">
            <h2>Let us create...</h2>
            <div class="row">
                <div class="col-lg-6">
                    <p>
                        You may contribute a small amount via PayPal if Nomad Force Template is useful for you. This will
                        absolutely help us to keep creating better CSS templates for you.
                    </p>
                    <p>
                        We provide you 100% free templates on TemplateMo website. Images are provided by FreePik and
                        Unsplash websites.
                    </p>
                </div>
                <div class="col-lg-6">
                    <p>
                        This Bootstrap 5 layout is free to use for your business. You are allowed to edit it in any way
                        you like. However, please do not redistribute this template ZIP file for a template download
                        purpose on any other website such as Free CSS collections.
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section class="section-padding pb-0" id="about">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-12 p-0">
                    <img src="~/assets/images/elena-rabkina-eVVzwsNhNf4-unsplash.jpg" class="img-fluid about-image"
                         alt="">
                </div>
                <div class="col-lg-3 col-12 bg-dark">
                    <div class="d-flex flex-column flex-wrap justify-content-center h-100 py-5 px-4 pt-lg-4 pb-lg-0">
                        <h3 class="text-white mb-3 aos-init aos-animate fs-1 fw-bold" data-aos="fade-up">
                            We’re -
                            idealists and
                            strategic thinkers.
                        </h3>

                        <p class="text-secondary-white-color aos-init aos-animate" data-aos="fade-up">
                            Over six years in
                            the video business
                        </p>

                        <div class="mt-3 custom-links">

                            <a href="#news" class="text-white custom-link aos-init" data-aos="zoom-in"
                               data-aos-delay="100">Read News &amp; Events</a>

                            <a href="#contact" class="text-white custom-link aos-init" data-aos="zoom-in"
                               data-aos-delay="300">Work with Us</a>
                        </div>

                    </div>
                </div>
                <div class="col-lg-6 col-12 p-0">
                    @if (Model != null && Model.Count > 0)
                    {
                        <section id="myCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @for (var i = 0; i < Model.Count; i++)
                                {
                                    <div class="carousel-item @(i == 1 ? "active" : "")">
                                        <img src="~/assets/images/@Model[i].Image"
                                     class="img-fluid team-image" alt="">

                                        <div class="team-thumb bg-warning">
                                            <h3 class="text-white mb-0">@Model[i].FullName</h3>

                                            <p class="text-secondary-white-color mb-0">@Model[i].Profession</p>
                                        </div>
                                    </div>
                                }
                            </div>

                            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>

                            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </section>

                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center" style="margin:0 auto;">
                            <h2>This area empty</h2>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <section id="portfolio">
        <div class="d-flex justify-content-center align-items-center">
            <h2 class="fw-bold fs-1" style="padding-top: 100px;">Portfolio</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 pt-5">
                    <div class="h-25">
                        <img width="636" height="445" src="~/assets/images/1.jpeg" alt="">
                        <div class="pt-3">
                            <h2 class="fw-bold">Effortless</h2>
                            <span class="fs-4 text-danger">Branding</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 pt-5">
                    <div class="h-25">
                        <img width="636" height="445" src="~/assets/images/2.jpeg" alt="">
                        <div class="pt-3">
                            <h2 class="fw-bold">Health technology</h2>
                            <span class="fs-4 text-success">Art Direction</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 pt-5">
                    <div class="h-25">
                        <img width="636" height="445" src="~/assets/images/3.jpeg" alt="">
                        <div class="pt-3">
                            <h2 class="fw-bold">The gig economy</h2>
                            <span class="fs-4 text-secondary">Graphic</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 pt-5">
                    <div class="h-25">
                        <img width="636" height="445" src="~/assets/images/4.jpeg" alt="">
                        <div class="pt-3">
                            <h2 class="fw-bold">Maki</h2>
                            <span class="fs-4 text-warning">Website</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="news section-padding" id="news">
        <div class="container">
            <div class="row">

                <div class="col-12">
                    <h2 class="mb-5 fw-bold text-center aos-init aos-animate" data-aos="fade-up">News &amp; Events</h2>
                </div>

                <div class="col-lg-6 col-12 mb-5 mb-lg-0">
                    <div class="news-thumb aos-init aos-animate" data-aos="fade-up">
                        <a href="news-detail.html" class="news-image-hover news-image-hover-warning">
                            <img src="~/assets/images/caroline-lm-uqveD8dYPUM-unsplash.jpg"
                                 class="img-fluid large-news-image news-image" alt="">
                        </a>

                        <div class="news-category bg-warning text-white">News</div>

                        <div class="news-text-info pt-2">
                            <h5 class="news-title">
                                <a href="news-detail.html" class="fw-bold news-title-link">
                                    The rise of the gig economy
                                    spells
                                    the end for these workers the old system
                                </a>
                            </h5>

                            <span class="text-muted">22 hours ago</span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-12">
                    <div class="news-thumb news-two-column d-flex flex-column  gap-3 flex-lg-row aos-init aos-animate"
                         data-aos="fade-up" style="height: 232.5px;">
                        <div class="news-top w-100">

                            <a href="news-detail.html" class="news-image-hover news-image-hover-primary">
                                <img src="~/assets/images/jean-philippe-delberghe-MmanXAs1sKw-unsplash.jpeg"
                                     class="img-fluid news-image" alt="">
                            </a>

                            <div class="news-category bg-primary text-white">Events</div>
                        </div>

                        <div class="news-bottom w-100">
                            <div class="news-text-info">
                                <h5 class="news-title">
                                    <a href="news-detail.html" class="news-title-link">
                                        Job Opportunities: Digital,
                                        Marketing
                                    </a>
                                </h5>

                                <div class="d-flex flex-wrap">
                                    <span class="text-muted me-2">
                                        <i class="bi-geo-alt-fill me-1 mb-2 mb-lg-0"></i>
                                        Alaska,
                                    </span>

                                    <span class="text-muted">August 6, 2021</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class=" news-thumb news-two-column d-flex  flex-column gap-3 flex-lg-row aos-init"
                         data-aos="fade-up" style="padding-top: 37px;height: 232.5px;">
                        <div class="news-top w-100 aos-init" data-aos="fade-up">

                            <a href="news-detail.html" class="news-image-hover news-image-hover-success">
                                <img src="~/assets/images/maria-stewart-p4tj0g-_aMM-unsplash.jpeg"
                                     class="img-fluid news-image" alt="">
                            </a>

                            <div class="news-category bg-success text-white">News</div>
                        </div>

                        <div class="news-bottom w-100">
                            <div class="news-text-info">
                                <h5 class="news-title">
                                    <a href="news-detail.html" class="news-title-link">
                                        What happened to new viral
                                        video?
                                    </a>
                                </h5>

                                <span class="text-muted">6 days ago</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <section id="contact">
        <div class="d-flex justify-content-center align-items-center">
            <h2 class="fw-bold fs-1" style="padding-top: 150px;">Dont' be shy, write to us</h2>
        </div>
        <div class="container" style="padding: 0% 15%;">
            <form action="">
                <div class="row">
                    <div class="col-lg-6 pt-3">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" placeholder="Full name" id="name">
                    </div>
                    <div class="col-lg-6 pt-3">
                        <label for="email">Email</label>
                        <input class="form-control" type="text" placeholder="Email address" id="email">
                    </div>
                    <div class="col-lg-12 pt-3">
                        <label for="message">How can we help?</label>
                        <textarea class="form-control" type="text" placeholder="Tell us about the project" id="message"
                                  rows="4"></textarea>
                    </div>
                    <div class="pt-3">
                        <h5>Services</h5>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-check-input" type="checkbox" id="services">
                        <label for="services" class="form-check-label">Branding</label>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-check-input" type="checkbox" id="experience">
                        <label for="experience" class="form-check-label">Digital Experiences</label>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-check-input" type="checkbox" id="dev">
                        <label for="dev" class="form-check-label">Web Development</label>
                    </div>
                </div>
                <div class="d-flex justify-content-sm-center pt-5">
                    <button class="btn-send text-nowrap">SEND MESSAGE</button>
                </div>
            </form>
        </div>
    </section>
    <section style="padding-top: 100px;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194472.6747754053!2d49.71487505045854!3d40.39476946986925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2sBaku%2C%20Azerbaijan!5e0!3m2!1sen!2s!4v1656232916483!5m2!1sen!2s"
                style="width: 100%;  border:0;" height="350" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        <div>
        </div>
    </section>
    <footer class="site-footer">
        <div class="container">
            <div class="row">

                <div class="col-12">
                    <h5 class="text-white">
                        <i class="las la-map-marker"></i>
                        State of Rio de Janeiro, Brazil
                    </h5>

                    <a href="mailto:info@company.com" class="text-light custom-link mt-3 mb-5">
                        info@company.com
                    </a>
                </div>

                <div class="col-6">
                    <p class="copyright-text mb-0">
                        Copyright © Nomad Force 2021

                        <br><br>Design: <a href="https://templatemo.com/page/1" target="_parent"
                                           class="text-light">TemplateMo</a>
                    </p>

                </div>

                <div class="col-lg-3 col-5 ms-auto">
                    <ul class="social-icon">
                        <li><a href="#" class="lab la-facebook"></a></li>

                        <li><a href="#" class="lab la-twitter"></a></li>

                        <li><a href="#" class="lab la-whatsapp"></a></li>

                        <li><a href="#" class="lab la-instagram"></a></li>

                        <li><a href="#" class="lab la-youtube"></a></li>
                    </ul>
                </div>

            </div>

        </div>
    </footer>
</body>

</html>